{
    "go.formatTool": "gofumpt",
    "editor.suggest.preview": true,
    "files.associations": {
        "*.gotmpl": "gotemplate"
    },
    "todo-tree.filtering.ignoreGitSubmodules": true,
    "todo-tree.filtering.excludeGlobs": [
        "**/tools/trang-20091111/**",
        "/usr/local/go/**/*"
    ],
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false
    },
    "files.watcherExclude": {
        "docs/**/*.md": true,
        "internal/terraform/resource/autogen/**/*.go": true,
        "internal/vyos/vyosinterfaces/**/*.go": true
    },
    "[terraform]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "gamunu.opentofu"
    },
    "opentofu.codelens.referenceCount": true,
    "opentofu.experimentalFeatures.prefillRequiredFields": true,
    "opentofu.experimentalFeatures.validateOnSave": true,
    "editor.formatOnSave": true
}
